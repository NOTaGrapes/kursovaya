#ifndef memoryCodeH
#define memoryCodeH
//---------------------------------------------------------------------------
#include "matrixCode.h"
#include <vector>
//---------------------------------------------------------------------------
class Memory
{
public:
	Memory();
	Memory(int);
	int resize(int);
	int size();
	Matrix& operator [](const int index)
	{
		return fields_[index];
	};
private:
	std::vector <Matrix> fields_;
};
//---------------------------------------------------------------------------
#endif
